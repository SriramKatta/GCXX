{
  "version": 8,
  "configurePresets": [
    {
      "name": "base-config",
      "hidden": true,
      "generator": "Unix Makefiles",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release",
        "CMAKE_EXPORT_COMPILE_COMMANDS": "ON",
        "USE_STATIC_ANALYZER" : "iwyu"
      }
    },
    {
      "name": "mode-cuda",
      "hidden": true,
      "inherits": "base-config",
      "cacheVariables": {
        "GCXX_CUDA_MODE": "ON"
      }
    },
    {
      "name": "mode-hip",
      "hidden": true,
      "inherits": "base-config",
      "cacheVariables": {
        "GCXX_HIP_MODE": "ON"
      }
    },
    {
      "name": "purpose-examples",
      "hidden": true,
      "cacheVariables": {
        "GCXX_BUILD_EXAMPLES": "ON"
      }
    },
    {
      "name": "purpose-tests",
      "hidden": true,
      "cacheVariables": {
        "GCXX_BUILD_TESTS": "ON"
      }
    },
    {
      "name": "configure-Release-cuda-examples",
      "displayName": "Release (CUDA Examples)",
      "inherits": [
        "mode-cuda",
        "purpose-examples"
      ],
      "binaryDir": "${sourceDir}/build/cuda",
      "cacheVariables": {
        "CMAKE_RUNTIME_OUTPUT_DIRECTORY": "${sourceDir}/build/cudabin"
      }
    },
    {
      "name": "configure-Release-hip-examples",
      "displayName": "Release (HIP Examples)",
      "inherits": [
        "mode-hip",
        "purpose-examples"
      ],
      "binaryDir": "${sourceDir}/build/hip",
      "cacheVariables": {
        "CMAKE_RUNTIME_OUTPUT_DIRECTORY": "${sourceDir}/build/hipbin"
      }
    },
    {
      "name": "configure-Release-cuda-tests",
      "displayName": "Release (CUDA Tests)",
      "inherits": [
        "mode-cuda",
        "purpose-tests"
      ],
      "binaryDir": "${sourceDir}/build/cuda-tests"
    },
    {
      "name": "configure-Release-hip-tests",
      "displayName": "Release (HIP Tests)",
      "inherits": [
        "mode-hip",
        "purpose-tests"
      ],
      "binaryDir": "${sourceDir}/build/hip-tests"
    }
  ],
  "buildPresets": [
    {
      "name": "build_base",
      "hidden": true,
      "jobs": 0
    },
    {
      "name": "build_cuda",
      "configurePreset": "configure-Release-cuda-examples",
      "inherits": "build_base"
    },
    {
      "name": "build_hip",
      "configurePreset": "configure-Release-hip-examples",
      "inherits": "build_base"
    },
    {
      "name": "build_cuda_tests",
      "configurePreset": "configure-Release-cuda-tests",
      "inherits": "build_base"
    },
    {
      "name": "build_hip_tests",
      "configurePreset": "configure-Release-hip-tests",
      "inherits": "build_base"
    }
  ],
  "testPresets": [
    {
      "hidden": true,
      "name": "test_base",
      "environment": {
        "GTEST_COLOR": "1"
      },
      "output": {
        "outputOnFailure": true,
        "verbosity": "default"
      },
      "execution": {
        "jobs": 0
      }
    },
    {
      "name": "test_cuda",
      "configurePreset": "configure-Release-cuda-tests",
      "inherits": "test_base"
    },
    {
      "name": "test_hip",
      "configurePreset": "configure-Release-hip-tests",
      "inherits": "test_base"
    }
  ]
}