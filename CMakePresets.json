{
  "version": 8,
  "configurePresets": [
    {
      "name": "base_configue",
      "hidden": true,
      "generator": "Unix Makefiles",
      "cacheVariables": {
        "CMAKE_EXPORT_COMPILE_COMMANDS": "ON"
      }
    },
    {
      "name": "base-release",
      "hidden": true,
      "inherits": "base_configue",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release"
      }
    },
    {
      "name": "base-debug",
      "hidden": true,
      "inherits": "base_configue",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug"
      }
    },
    {
      "name": "mode-cuda",
      "hidden": true,
      "cacheVariables": {
        "GCXX_CUDA_MODE": "ON"
      }
    },
    {
      "name": "mode-hip",
      "hidden": true,
      "cacheVariables": {
        "GCXX_HIP_MODE": "ON"
      }
    },
    {
      "name": "purpose-examples",
      "hidden": true,
      "cacheVariables": {
        "GCXX_BUILD_EXAMPLES": "ON"
      }
    },
    {
      "name": "purpose-tests",
      "hidden": true,
      "cacheVariables": {
        "GCXX_BUILD_TESTS": "ON"
      }
    },
    {
      "name": "cuda-release-examples",
      "displayName": "CUDA Release (Examples)",
      "inherits": [
        "base-release",
        "mode-cuda",
        "purpose-examples"
      ],
      "binaryDir": "${sourceDir}/build/cuda",
      "cacheVariables": {
        "CMAKE_RUNTIME_OUTPUT_DIRECTORY": "${sourceDir}/build/cudabin"
      }
    },
    {
      "name": "cuda-debug-examples",
      "displayName": "CUDA Debug (Examples)",
      "inherits": [
        "base-debug",
        "mode-cuda",
        "purpose-examples"
      ],
      "binaryDir": "${sourceDir}/build/cuda-debug",
      "cacheVariables": {
        "CMAKE_RUNTIME_OUTPUT_DIRECTORY": "${sourceDir}/build/cudabin-debug"
      }
    },
    {
      "name": "hip-release-examples",
      "displayName": "HIP Release (Examples)",
      "inherits": [
        "base-release",
        "mode-hip",
        "purpose-examples"
      ],
      "binaryDir": "${sourceDir}/build/hip",
      "cacheVariables": {
        "CMAKE_RUNTIME_OUTPUT_DIRECTORY": "${sourceDir}/build/hipbin"
      }
    },
    {
      "name": "hip-debug-examples",
      "displayName": "HIP Debug (Examples)",
      "inherits": [
        "base-debug",
        "mode-hip",
        "purpose-examples"
      ],
      "binaryDir": "${sourceDir}/build/hip-debug",
      "cacheVariables": {
        "CMAKE_RUNTIME_OUTPUT_DIRECTORY": "${sourceDir}/build/hipbin-debug"
      }
    },
    {
      "name": "cuda-release-tests",
      "displayName": "CUDA Release (Tests)",
      "inherits": [
        "base-release",
        "mode-cuda",
        "purpose-tests"
      ],
      "binaryDir": "${sourceDir}/build/cuda-tests"
    },
    {
      "name": "cuda-debug-tests",
      "displayName": "CUDA Debug (Tests)",
      "inherits": [
        "base-debug",
        "mode-cuda",
        "purpose-tests"
      ],
      "binaryDir": "${sourceDir}/build/cuda-tests-debug"
    },
    {
      "name": "hip-release-tests",
      "displayName": "HIP Release (Tests)",
      "inherits": [
        "base-release",
        "mode-hip",
        "purpose-tests"
      ],
      "binaryDir": "${sourceDir}/build/hip-tests"
    },
    {
      "name": "hip-debug-tests",
      "displayName": "HIP Debug (Tests)",
      "inherits": [
        "base-debug",
        "mode-hip",
        "purpose-tests"
      ],
      "binaryDir": "${sourceDir}/build/hip-tests-debug"
    }
  ],
  "buildPresets": [
    {
      "name": "build_base",
      "hidden": true,
      "jobs": 0
    },
    {
      "name": "build-cuda-release-examples",
      "configurePreset": "cuda-release-examples",
      "inherits": "build_base"
    },
    {
      "name": "build-cuda-debug-examples",
      "configurePreset": "cuda-debug-examples",
      "inherits": "build_base"
    },
    {
      "name": "build-hip-release-examples",
      "configurePreset": "hip-release-examples",
      "inherits": "build_base"
    },
    {
      "name": "build-hip-debug-examples",
      "configurePreset": "hip-debug-examples",
      "inherits": "build_base"
    },
    {
      "name": "build-cuda-release-tests",
      "configurePreset": "cuda-release-tests",
      "inherits": "build_base"
    },
    {
      "name": "build-cuda-debug-tests",
      "configurePreset": "cuda-debug-tests",
      "inherits": "build_base"
    },
    {
      "name": "build-hip-release-tests",
      "configurePreset": "hip-release-tests",
      "inherits": "build_base"
    },
    {
      "name": "build-hip-debug-tests",
      "configurePreset": "hip-debug-tests",
      "inherits": "build_base"
    }
  ],
  "testPresets": [
    {
      "name": "test-base",
      "hidden": true,
      "environment": {
        "GTEST_COLOR": "1"
      },
      "output": {
        "outputOnFailure": true,
        "verbosity": "default"
      },
      "execution": {
        "jobs": 0
      }
    },
    {
      "name": "test-cuda-release",
      "inherits": "test-base",
      "configurePreset": "cuda-release-tests"
    },
    {
      "name": "test-cuda-debug",
      "inherits": "test-base",
      "configurePreset": "cuda-debug-tests"
    },
    {
      "name": "test-hip-release",
      "inherits": "test-base",
      "configurePreset": "hip-release-tests"
    },
    {
      "name": "test-hip-debug",
      "inherits": "test-base",
      "configurePreset": "hip-debug-tests"
    }
  ]
}