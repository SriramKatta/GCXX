{
  "version": 8,
  "configurePresets": [
    {
      "name": "base-config",
      "hidden": true,
      "generator": "Unix Makefiles",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release",
        "CMAKE_EXPORT_COMPILE_COMMANDS": "ON"
      }
    },
    {
      "name": "configure-Release-cuda",
      "displayName": "Release (CUDA)",
      "inherits": "base-config",
      "binaryDir": "${sourceDir}/build/cuda",
      "cacheVariables": {
        "GPUCXX_CUDA_MODE": "ON",
        "GPUCXX_BUILD_EXAMPLES": "ON",
        "GPUCXX_BUILD_TESTS": "ON",
        "CMAKE_RUNTIME_OUTPUT_DIRECTORY": "${sourceDir}/build/cudabin"
      }
    },
    {
      "name": "configure-Release-hip",
      "displayName": "Release (HIP)",
      "inherits": "base-config",
      "binaryDir": "${sourceDir}/build/hip",
      "cacheVariables": {
        "GPUCXX_HIP_MODE": "ON",
        "GPUCXX_BUILD_EXAMPLES": "ON",
        "GPUCXX_BUILD_TESTS": "ON",
        "CMAKE_RUNTIME_OUTPUT_DIRECTORY": "${sourceDir}/build/hipbin"
      }
    }
  ],
  "buildPresets": [
    {
      "name": "build_cuda",
      "configurePreset": "configure-Release-cuda",
      "jobs": 0
    },
    {
      "name": "build_hip",
      "configurePreset": "configure-Release-hip",
      "jobs": 0
    }
  ],
  "testPresets": [
    {
      "name": "test_cuda",
      "configurePreset": "configure-Release-cuda",
      "output": {"outputOnFailure": true},
      "execution": {"jobs": 0}
    },
    {
      "name": "test_hip",
      "configurePreset": "configure-Release-hip",
      "output": {"outputOnFailure": true},
      "execution": {"jobs": 0}
    }
  ]
}
